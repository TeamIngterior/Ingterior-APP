<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseTextView">
        <attr name="customTextColor" format="color" />
        <attr name="customTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="InputTextLayout">
        <attr name="inputText" format="string"/>
        <attr name="inputHint" format="string"/>
        <attr name="inputMax" format="integer"/>
        <attr name="inputMaxLine" format="integer"/>
        <attr name="inputSingleLine" format="boolean"/>
        <attr name="inputSupportText" format="string"/>
        <attr name="inputSupportSpacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VisualCheckBox">
        <attr name="checkBoxText" format="string"/>
        <attr name="isChecked" format="boolean"/>
        <attr name="checkBoxSrc" format="reference"/>
        <attr name="uncheckBoxSrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoginButton">
        <attr name="loginType" format="string"/>
    </declare-styleable>

    <declare-styleable name="BaseButtonView">
        <attr name="visualSrc" format="reference"/>
        <attr name="visualText" format="string"/>
        <attr name="visualTextSize" format="float"/>
        <attr name="visualIconSize" format="dimension"/>
        <attr name="visualEnable" format="boolean"/>
        <attr name="visualLineSpacingExtra" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VisualImageButton">
        <attr name="visualBackground" format="reference"/>
    </declare-styleable>

</resources>