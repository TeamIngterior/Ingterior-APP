<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IngTetrior" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color07</item>
        <item name="colorPrimaryVariant">@color/text_color_06</item>
        <item name="colorOnPrimary">@color/text_color_06</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color05</item>
        <item name="colorSecondaryVariant">@color/secondary_color04</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/text_color_06</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor_input_text_view</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active.Label" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
        <item name="font">@font/pretendard_regular</item>
        <item name="android:textColor">@color/text_color_06</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.InActive.Label" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
        <item name="font">@font/pretendard_regular</item>
        <item name="android:textColor">@color/text_color_04</item>
    </style>

    <style name="Theme.Custom.Dialog.Default" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="dialogCornerRadius">4dp</item>
    </style>

    <style name="Theme.Custom.Tab.Default" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

</resources>