<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.site.SiteManagementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_site_list_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ing.ui.button.VisualImageButton
                    android:id="@+id/vib_site_list_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/login_label_start_margin"
                    app:srcCompat="@drawable/ic_back_24" />


                <com.ing.ui.text.label.LabelView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vib_site_list_option"
                    app:layout_constraintStart_toEndOf="@+id/vib_site_list_back"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="가나다" />


                <com.ing.ui.button.VisualImageButton
                    android:id="@+id/vib_site_list_option"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_vertical_menu" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_site_management_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_site_list_bar">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_site_management_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하자 체크"
                style="@style/Theme.Custom.Tab.Default"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_site_management_manamge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공사 관리"
                style="@style/Theme.Custom.Tab.Default"/>


        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/frame_site_management_image_layout"
            android:layout_width="304dp"
            android:layout_height="304dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_round_square_effect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_site_management_layout">

            <ImageView
                android:id="@+id/iv_management_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/blueprint1"
                />

        </FrameLayout>


        <com.ing.ui.button.VisualDotLineButton
            android:id="@+id/vdb_site_management_add_point"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            app:visualLineSpacingExtra="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_site_management_image_layout"
            app:visualText="아래에 + 버튼을 눌러\n새로운 하자를 추가해 보세요!" />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_site_management_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_site_management_image_layout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_site_management_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:backgroundTint="@color/primary_color07"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_image"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>