<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.site.defects.SiteInsertDefectsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_site_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ing.ui.button.VisualImageButton
                    android:id="@+id/vib_site_insert_defects_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/login_label_start_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_back_24" />


                <com.ing.ui.text.label.LabelView
                    android:id="@+id/lb_site_insert_defects_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="하자 체크"
                    android:layout_marginEnd="@dimen/page_horizontal_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/vib_site_insert_defects_back"
                    app:layout_constraintTop_toTopOf="parent"
                     />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>


        <FrameLayout
            android:id="@+id/frame_site_insert_defects_image_layout"
            android:layout_width="304dp"
            android:layout_height="304dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_round_square_effect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_site_layout">

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/photo_site_insert_defects_blueprint"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/blueprint1" />

        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="4dp"
            android:layout_marginTop="24dp"
            android:scrollbars="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/page_horizontal_padding"
                android:paddingEnd="@dimen/page_horizontal_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ing.ui.text.title.TitleH5View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:text="하자 위치" />

                    <com.ing.ui.text.title.TitleH5View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        app:customTextColor="@color/secondary_color05" />

                </LinearLayout>

                <com.ing.ui.text.edit.InputTextLayout
                    android:id="@+id/itv_site_insert_defects_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:inputHint="하자 위치(이름)을 입력해주세요."
                    app:inputMax="50"
                    app:inputMaxLine="1"
                    app:inputSingleLine="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <com.ing.ui.text.title.TitleH5View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:text="하자 설명" />

                    <com.ing.ui.text.caption.Caption2View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="(선택 / 최대 200자 까지)" />

                </LinearLayout>

                <com.ing.ui.text.edit.InputTextLayout
                    android:id="@+id/itv_site_insert_defects_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:inputHint="하자 설명 내용을 입력해주세요."
                    app:inputMax="200"
                    app:inputMaxLine="10"
                    app:inputSupportSpacing="4dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.ing.ui.text.title.TitleH5View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:text="하자 이미지 추가하기" />

                        <com.ing.ui.text.caption.Caption2View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="@string/caption_option" />

                    </LinearLayout>

                    <com.ing.ui.button.VisualDefaultButton
                        android:id="@+id/vdb_site_insert_defects_add_image"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        app:visualIconSize="12dp"
                        app:visualSrc="@drawable/ic_add_image"
                        app:visualText="이미지 추가하기" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_site_insert_defects_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="4"
                        tools:itemCount="8"
                        tools:listitem="@layout/item_site_defect_image"/>

                    <com.ing.ui.text.caption.Caption2View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/hint_new_site_2" />


                </LinearLayout>

                <com.ing.ui.button.VisualButton
                    android:id="@+id/vb_site_insert_defects_commit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line_add_code_site_layout"
                    app:layout_constraintVertical_bias="0"
                    app:visualEnable="false"
                    app:visualText="추가하기" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>