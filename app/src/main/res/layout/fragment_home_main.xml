<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".ui.home.HomeMainFragment">

    <TextView
        android:id="@+id/tv_home_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="쉽고 편한 현장관리\n잉테리어와 함께"
        android:textColor="@color/text_color_06"
        android:textSize="@dimen/title_h1"
        android:lineSpacingExtra="8sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/line_home_main_simple_estimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="12dp"
        android:background="@drawable/bg_start_simple_interior"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_main_title">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_white_circle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="인테리어 간편견적"
                android:textColor="@color/text_color_01"
                android:textSize="@dimen/title_h1"
                android:fontFamily="@font/pretendard_medium"
                android:letterSpacing="0.03"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="견적 저장도 하고 공유도 해보자!"
                android:textColor="@color/text_color_03"
                android:textSize="@dimen/title_h4"
                android:fontFamily="@font/pretendard_regular"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:scaleType="centerInside"
            app:tint="@color/white"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_home_main_site_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_home_main_simple_estimation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="현장목록"
                android:textColor="@color/text_color_06"
                android:textSize="@dimen/title_h1"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_home_main_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_baseline_add_24"
                android:background="@drawable/bg_circle_effect"
                android:padding="4dp"
                android:layout_marginEnd="2dp"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/iv_home_main_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_baseline_search_24"
                android:background="@drawable/bg_circle_effect"
                android:padding="4dp"
                android:clickable="true"
                />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_main_site_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <LinearLayout
            android:id="@+id/line_home_main_new_site"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_home_main_new_site"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="새 현장을 등록해 보세요!"
                android:textSize="@dimen/title_h1"
                android:textColor="@color/text_color_06"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_home_main_login"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="로그인 하고 더 많은 기능을 이용해보세요."
            android:textColor="@color/text_color_06"
            android:textSize="@dimen/title_h4"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="로그인"
            android:textColor="@color/text_color_06"
            android:textSize="@dimen/title_h3"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>